{% extends 'base.html.twig' %}

{% block title %}Bans{% endblock %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Bans</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('home.index') }}">Home</a></li>
                            <li class="breadcrumb-item active">Bans</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <a class="btn btn-danger btn-sm" href="{{ path('ban.ban') }}">
                                <i class="fas fa-ban">
                                </i>
                                Ban
                            </a>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>Player</th>
                                    <th>Reason</th>
                                    <th>Banned to</th>
                                    <th>Punisher</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for ban in bans %}
                                    <tr>
                                        <td><a href="{{ path('profile.user', {'user': ban.name}) }}">{{ ban.name}}</a></td>
                                        <td>{{ ban.reason }}</td>
                                        <td>{{ ban.formattedend|format_datetime(locale="de") }}</td>
                                        <td><a href="{{ path('profile.user', {'user': ban.teamUUID}) }}">{{ ban.teamUUID}}</a></td>
                                        <td><a class="btn btn-danger btn-sm" href="{{ path('ban.unban', {'name': ban.name}) }}">
                                                <i class="fas fa-trash">
                                                </i>
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>Player</th>
                                    <th>Reason</th>
                                    <th>Banned to</th>
                                    <th>Punisher</th>
                                    <th>Action</th>
                                </tr>
                                </tfoot>
                            </table>
                            <div class="navigation">
                                {{ knp_pagination_render(bans) }}
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->

                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
{% endblock %}
