{% extends 'base.html.twig' %}

{% block title %}Chatlogs{% endblock %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Chatlogs</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('home.index') }}">Home</a></li>
                            <li class="breadcrumb-item active">Chatlogs</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        {% include 'messages.html.twig' %}

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <a class="btn btn-secondary btn-sm" href="{{ path('reports.archive') }}">
                                <i class="fas fa-archive"></i>
                                Archive
                            </a>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>Logged player</th>
                                    <th>Created by</th>
                                    <th>Logged at</th>
                                    <th>Created at</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for chatlog in chatlogs %}
                                    <tr>
                                        <td>{{ chatlog.uuid }}</td>
                                        <td>{{ chatlog.creatorUuid }}</td>
                                        <td>{{ chatlog.server }}</td>
                                        <td>{{ chatlog.createdAt|format_datetime(locale="de") }}</td>
                                        <td><a class="btn btn-secondary btn-sm" href="{{ path('chatlogs.view', {'id': chatlog.logid}) }}">
                                                <i class="fas fa-eye"></i>
                                                View
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>Logged player</th>
                                    <th>Created by</th>
                                    <th>Logged at</th>
                                    <th>Created at</th>
                                    <th>Action</th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->

                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
{% endblock %}
