{% extends 'base.html.twig' %}

{% block title %}Settings{% endblock %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>{{ 'nav_settings'|trans }}</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('home.index') }}">Home</a></li>
                            <li class="breadcrumb-item">Administration</li>
                            <li class="breadcrumb-item active">{{ 'nav_settings'|trans }}</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        {% include 'messages.html.twig' %}

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-12">
                    <div class="card p-2">
                        {{ form_start(settings) }}
                        <div class="p-2">
                            <div class="alert alert-info p">
                                {{ 'imprint_desc'|trans }}
                            </div>
                        </div>
                        {{ form_row(settings.imprint) }}
                        <br>
                        {{ form_row(settings.privacy) }}
                        <br>
                        {{ form_row(settings.submit) }}
                        {{ form_end(settings) }}
                    </div>
                    <!-- /.card -->

                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
        <script src="{{ asset('assets/js/jquery.min.js') }}"></script>
        <script src="{{ asset('assets/js/icheck.min.js') }}"></script>
    </div>
{% endblock %}
