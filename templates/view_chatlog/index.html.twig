{% extends 'userbase.html.twig' %}

{% block title %}

    {% if chatlog != null %}
        Chatlog - #{{ chatlog.logid }}
    {% else %}
        Chatlog - Not found
    {% endif %}

{% endblock %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">
                            {% if chatlog != null %}
                                Chatlog - #{{ chatlog.logid }}
                            {% else %}
                                Chatlog - Not found
                            {% endif %}
                        </h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item">Chatlogs</li>
                            <li class="breadcrumb-item active">
                                {% if chatlog != null %}
                                    Chatlog - #{{ chatlog.logid }}
                                {% else %}
                                    Chatlog - Not found
                                {% endif %}
                            </li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <div class="content">

                <div class="card card-primary card-outline m-10">
                    <div class="card-header">
                        <h5 class="m-0">Chatlog</h5>
                    </div>
                    <div class="card-body">

                        {% if chatlog != null %}
                            {% for chatlog in chatlogs %}
                                <!-- Message. Default to the left -->
                                <div class="direct-chat-msg">
                                    <div class="direct-chat-infos clearfix">
                                        <span class="direct-chat-name float-left">{{ chatlog.uuid }}</span>
                                        <span class="direct-chat-timestamp float-right">{{ chatlog.senddate|format_datetime(locale="de") }}</span>
                                    </div>
                                    <!-- /.direct-chat-infos -->
                                    <img class="direct-chat-img" src="https://minotar.net/helm/{{ chatlog.uuid }}/64.png" alt="Message User Image">
                                    <!-- /.direct-chat-img -->
                                    <div class="direct-chat-text">
                                        {{ chatlog.message }}
                                    </div>
                                    <!-- /.direct-chat-text -->
                                </div>
                                <!-- /.direct-chat-msg -->
                            {% endfor %}
                        {% else %}
                            The requested chatlog was not found.
                        {% endif %}

                    </div>
                </div>

            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{% endblock %}
