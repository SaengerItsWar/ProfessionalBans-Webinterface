<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('assets/img/favicon.ico') }}">

    <title>{% block title %}ProfessionalBans{% endblock %}</title>

    {% block stylesheets %}
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="{{ asset('assets/css/adminlte.min.css') }}">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    {% endblock %}
</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <!--
            <li class="nav-item d-none d-sm-inline-block">
                <a href="index3.html" class="nav-link">Home</a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="#" class="nav-link">Contact</a>
            </li>
            -->
        </ul>


    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="{{ path('home.index') }}" class="brand-link">
            <img src="{{ asset('assets/img/professionalbans.png') }}" alt="ProfessionalBans Logo" class="brand-image img-circle elevation-3"
                 style="opacity: .8">
            <span class="brand-text font-weight-light">ProfessionalBans</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
                         with font-awesome or any other icon font library -->
                    <li class="nav-item">
                        <a href="{{ path('chatlogs.find') }}" class="nav-link {% if app.request.get('_route') == "chatlogs.find" %} active {% endif %}">
                            <i class="fas fa-comments nav-icon"></i>
                            <p>Chatlogs</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('ban.index') }}" class="nav-link {% if app.request.get('_route') == "ban.index" %} active {% endif %}">
                            <i class="fas fa-inbox nav-icon"></i>
                            <p>{{ 'nav_unbanrequest'|trans }}</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('mute.index') }}" class="nav-link {% if app.request.get('_route') == "mute.index" %} active {% endif %}">
                            <i class="fas fa-address-card nav-icon"></i>
                            <p>{{ 'nav_imprint'|trans }}</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link {% if app.request.get('_route') == "mute.index" %} active {% endif %}">
                            <i class="fas fa-user-secret nav-icon"></i>
                            <p>{{ 'nav_privacy'|trans }}</p>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    {% for message in app.session.flashbag.get('error') %}
        <div class="alert alert-danger">
            <h4><i class="icon fa fa-ban"></i> Error!</h4>
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            <h4><i class="icon fa fa-check"></i> Success!</h4>
            {{ message }}
        </div>
    {% endfor %}

    {% block body %}{% endblock %}

    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- Default to the left -->
        <strong>Copyright &copy; 2020 <a href="https://tutorialwork.de/professionalbans">ProfessionalBans</a></strong> by <a
                href="https://youtube.com/Tutorialwork">Tutorialwork</a>
    </footer>
</div>
<!-- ./wrapper -->

<!-- REQUIRED SCRIPTS -->

{% block javascripts %}
<!-- jQuery -->
<script src="{{ asset('assets/js/jquery.min.js') }}"></script>
<!-- Bootstrap 4 -->
<script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
<!-- AdminLTE App -->
<script src="{{ asset('assets/js/adminlte.min.js') }}"></script>
</body>
</html>
{% endblock %}